<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_foto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/img_omo"
        android:src="@drawable/img_omo"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_getProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Omo sabão em pó"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_foto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_descricao_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" sabão multiuso"
        android:textSize="14sp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/txt_getProd"
        app:layout_constraintStart_toEndOf="@+id/img_foto"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$: "
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_descricao_produto"
        app:layout_constraintStart_toEndOf="@id/img_foto"/>

    <Button
        android:id="@+id/btn_mais1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txt_preco"
        app:layout_constraintTop_toBottomOf="@id/txt_descricao_produto"
        android:layout_marginStart="20dp"
        android:background="@drawable/borda_arredondada"/>
</androidx.constraintlayout.widget.ConstraintLayout>